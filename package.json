{
  "name": "nginformatica-styleguide",
  "version": "0.0.1-alpha.5",
  "description": "A minimalist styleguide in NGInformatica apps",
  "main": "lib/index.js",
  "typings": "./index.d.ts",
  "types": "./index.d.ts",
  "typescript": {
    "definition": "./index.d.ts"
  },
  "author": "void",
  "license": "MIT",
  "scripts": {
    "docs": "start-storybook",
    "docs:build": "build-storybook --docs -o public",
    "now-build": "rm -rf public && npm run docs:build",
    "build": "node pre-publish && npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "publish:alpha": "node pre-publish && npm run build && npm publish lib --tag alpha",
    "release": "npm publish lib --scope=@nginformatica --access public"
  },
  "devDependencies": {
    "@material-ui/core": "4.12.4",
    "@types/styled-components": "5.1.26",
    "flipper-ui": "0.26.1",
    "fs-extra": "8.1.0",
    "styled-components": "^5.3.6",
    "typescript": "4.8.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
